<div id="go-top">
    </div>
        <style type="text/css">
        #go-top {width:40px;height:36px;background-color:#2196f3;position:relative;border-radius:2px;position:fixed;right:10px;bottom:80px;cursor:pointer;display:none;z-index:10;}
        #go-top:after {content:" ";position:absolute;left:14px;top:14px;border-top:2px solid #fff;border-right:2px solid #fff;width:12px;height:12px;transform:rotate(-45deg)}#go-top:hover {background-color:#4d63dd}
        </style>
        <script>
            $(function() {
                var o = $("#go-top");
                $(window).scroll(function() {
                    //监听滚动事件
                    300 < document.documentElement.scrollTop  ? o.show(300) : o.hide(200);
                })
                 //回到顶部
                 $("#go-top").click(function() {
                    return $("html,body").animate({ scrollTop: 0 })
                 })
            })
        </script>
